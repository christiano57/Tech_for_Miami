<div class="container">
	<div class="center">
		<h1>Project Index Page</h1>
	</div>
	<table>
        <thead>
          <tr>
              <th data-field="name">Name</th>
              <th data-field="timeline">Timeline</th>
              <th data-field="accept">Accept?</th>
          </tr>
        </thead>

        <tbody>
       	<% unless @projects == nil %>
		<% @projects.each do |project|%>

          <tr>
			<td><a href="projects/<%= project.id %>"><%= project.name %></a></td>            
			<td><%= project.timeline %> days</td>
            <td><a href="/" data-project-id="<%= project.id %>" class="waves-effect waves-light btn<%if current_user.has_role? :admin %> disabled <% end %>">Accept</a></td>
          </tr>
        <% end %>
        <% end %>
        </tbody>
      </table>
</div>